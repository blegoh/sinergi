<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/qcImage"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/qcTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/qcImage"
            android:text="Judul"
            android:textColor="#333"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qcDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qcTitle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/qcImage"
            android:text="5 Oktober 2018"
            android:textColor="#333"
            android:textSize="15dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/qcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qcDate"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/qcImage"
            android:text="Status"
            android:textColor="#333"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/qcVerif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_check_circle_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>